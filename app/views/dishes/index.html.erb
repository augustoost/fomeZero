<p id="notice"><%= notice %></p>

<h1>Dishes</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Price</th>
      <th>Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dishes.each do |dish| %>
      <tr>
        <td scope="row" ><%= dish.description %></td>
        <td scope="row"><%= dish.price %></td>
        <td scope="row"><%= dish.time %></td>
        <td scope="row"><%= link_to 'Show', dish %></td>
        <td scope="row"><%= link_to 'Edit', edit_dish_path(dish) %></td>
        <td scope="row"><%= link_to 'Destroy', dish, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Dish', new_dish_path %>
